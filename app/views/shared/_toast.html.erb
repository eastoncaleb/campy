<div class="flex justify-center">
 	<div id="toast-simple" class="<%= color if local_assigns[:color] %> backdrop-blur-xl mb-3 <%= "hidden" unless local_assigns[:visible] %> flex items-center max-w-xs p-4 space-x-4 text-white divide-x divide-gray-200 rounded-lg shadow space-x" role="alert">
			<div>
				<i class="<%= icon if local_assigns[:icon] %>" id="icon"></i>
			</div>
			<div class="pl-4 text-sm font-bold">
				<div id="message"><%= message if local_assigns[:message] %></div>
			</div>
	</div>
</div>