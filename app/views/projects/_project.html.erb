<turbo-frame id="<%= dom_id project %>" class="flex flex-wrap justify-between items-center my-4 py-2 px-4 bg-denim-400/10 rounded-lg text-denim-900 shadow-md shadow-denim-200/50 border-b border-denim-100">
  <%= form_with(model: project, class:"text-lg inline-block flex-grow") do |form| %>
    <%= form.check_box :completed,
                       data: {
                         id: project.id,
												 type: "projects",
                         action: "checkbox#toggle"
                       },
                       class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>
    <span class="font-semibold text-denim-800"><%= project.name %></span>
  <% end %>
	<%= link_to "Edit", edit_project_path(project),
              class: "btn bg-denim-800 text-white hover:bg-denim-900 text-sm"
  %>
  <div class="inline-block ml-2">
    <%= button_to "Delete", project_path(project),
                  method: :delete,
                  class: "btn bg-red-600/80 text-white hover:bg-red-600 text-sm",
									data: { "turbo-frame": "_top" } %>
  </div>
</turbo-frame>
