<%= turbo_frame_tag dom_id(@task) do %>
	<div class="w-full flex justify-between items-center p-10 text-denim-900">
		<div class="grid grid-cols-2 gap-4 w-full">
			<p><span class="font-semibold">Description:</span> <%= @task.description %></p>
			<p><span class="font-semibold">Created by:</span> <%= @task.creator.email %></p>
		</div>
		<%= link_to tasks_path, class: "text-sm ml-2 bg-denim-800 hover:bg-denim-900 text-white flex justify-center text-lg px-2 py-1 rounded-lg items-center" do %>
			Close <i class="fa-solid fa-xmark ml-1"></i>
		<% end %>
	</div>
<% end %>
